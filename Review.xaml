<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Proiect_hotel_app.Review"
             Title="Review">
    <VerticalStackLayout>
        <Slider x:Name="ratingSlider" Minimum="1" Maximum="5" Value="1" />

        <Editor x:Name="messageEditor" Placeholder="Enter your review message" />

        <Button Text="Submit Review" Clicked="OnSubmitReviewClicked" />
    </VerticalStackLayout>
</ContentPage>