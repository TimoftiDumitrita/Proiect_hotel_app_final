<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proiect_hotel_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proiect_hotel_app"
    Shell.FlyoutBehavior="Disabled"
    Title="Proiect_hotel_app">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}" />
        <ShellContent Title="Camere" ContentTemplate="{DataTemplate local:Camere}" />
        <ShellContent Title="Review" ContentTemplate="{DataTemplate local:Review}" />
        <ShellContent Title="Rezervare" ContentTemplate="{DataTemplate local:RezervarePage}" />
    </TabBar>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
